<%= render 'import_ingredients' %>

<div class="row">
  <div class="col s6 offset-s3">
    <h1 class="center-text title"><%= @shopping_list.title %></h1>

    <div id="ingredient-list">
      <%= render 'ingredients/ingredients' %>
    </div>
  </div>
  <br>
</div>

<div class="row">
  <div class="col s6 offset-s3 center-text">
    <!-- Ingredient Modal Trigger -->
    <a class="modal-trigger waves-effect waves-light btn new-ingredient" id="new-ingredient-btn" href="#ingredientModal">New Ingredient</a>

      <!-- Ingredient Modal Structure -->
    <div id="ingredientModal" class="modal modal-fixed-footer">
      <div class="modal-content ingredient-form-wrapper">
      </div>

      <div class="modal-footer">
        <button class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</button>
        <button class="waves-effect waves-green btn-flat" id="ingredient-submit-btn">Save</button>
      </div>
    </div>
  </div>
</div>
